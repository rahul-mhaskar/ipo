// src/components/DescriptionWithToggle.js
import React, { useState } from 'react';

const DescriptionWithToggle = ({ description }) => {
  const [isExpanded, setIsExpanded] = useState(false);
  const words = description.split(' ');
  const showToggle = words.length > 50;

  const displayText = isExpanded || !showToggle ? description : words.slice(0, 50).join(' ') + '...';

  return (
    <div>
      <p className="text-gray-700 text-base leading-relaxed">
        {displayText}
      </p>
      {showToggle && (
        <button
          onClick={() => setIsExpanded(!isExpanded)}
          className="mt-2 text-blue-600 hover:text-blue-800 font-semibold text-sm"
        >
          {isExpanded ? 'Read Less' : 'Read More'}
        </button>
      )}
    </div>
  );
};

export default DescriptionWithToggle;
